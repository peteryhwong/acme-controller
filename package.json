{
    "name": "acme-controller",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "private": true,
    "scripts": {
        "db:diagram": "typeorm-uml ormconfig.json",
        "db:diagram:puml": "npm run db:diagram -- --direction=TB --download=${npm_package_name}.puml --format=puml --with-entity-names-only",
        "prepare": "husky install",
        "audit": "better-npm-audit audit --production",
        "build": "rm -rf dist/ && tsc && cp -R src/resource dist/",
        "watch": "tsc -w",
        "start": "NODE_ENV=production node --max-old-space-size=2048 dist/index.js",
        "migrate": "ts-node src/migration.ts",
        "dev": "TZ=Asia/Hong_Kong NODE_ENV=dev nodemon src/index.ts",
        "format:fix": "prettier --write \"{src,componentTests}/**/*.{ts,tsx,yml}\" 'README.md' 'docker-compose.yml' ",
        "format:check": "prettier --check \"src/**/*.{ts,tsx}\" ",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "test:unit": "NODE_ENV=test jest --coverage",
        "test": "npm run format:check && npm run lint && npm run test:unit",
        "typeorm": "typeorm-ts-node-commonjs",
        "schema": "ts-node src/openapi/generator.ts"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "dependencies": {
        "@ankh/ankh-auth": "^1.13.0",
        "@ankh/ankh-db": "^1.12.0",
        "@ankh/ankh-http": "^1.4.0",
        "@ankh/ankh-logger": "^1.2.0",
        "@ankh/ankh-queue": "^1.2.0",
        "ali-oss": "^6.22.0",
        "axios": "^1.8.1",
        "lodash": "^4.17.21",
        "moment-timezone": "^0.5.48",
        "mysql2": "^3.13.0",
        "reflect-metadata": "^0.1.13",
        "semver": "^7.7.1",
        "typeorm": "^0.3.21",
        "ws": "^8.18.1"
    },
    "devDependencies": {
        "@ankh/typeorm-uml": "^1.2.0",
        "@types/ali-oss": "^6.16.11",
        "@types/express": "^4.17.21",
        "@types/jest": "^27.4.1",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/lodash": "^4.17.16",
        "@types/node": "^10.12.26",
        "@types/semver": "^7.7.0",
        "@types/sinon": "^17.0.4",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^3.4.4",
        "@types/ws": "^8.18.1",
        "@typescript-eslint/eslint-plugin": "^8.26.0",
        "@typescript-eslint/parser": "^8.26.0",
        "better-npm-audit": "^3.7.3",
        "eslint": "^9.21.0",
        "eslint-import-resolver-typescript": "^3.8.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^16.0.0",
        "husky": "^7.0.4",
        "jest": "^29.3.1",
        "jsonwebtoken": "^9.0.2",
        "nock": "^14.0.2",
        "nodemon": "^3.1.9",
        "openapi-types": "^12.1.0",
        "openapi-typescript": "^4.5.0",
        "prettier": "^3.0.2",
        "sinon": "^20.0.0",
        "supertest": "^7.1.0",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.7.0",
        "typescript": "^5.8.3",
        "uuid": "^11.1.0"
    }
}
